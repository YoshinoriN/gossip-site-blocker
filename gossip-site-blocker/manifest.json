{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.2.1",
  "default_locale": "en",
  "description": "__MSG_extensionDescription__",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon-16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/search*",
        "https://www.google.co.jp/search*"
      ],
      "run_at": "document_start",
      "js": [
        "content_script/document_start/start.js"
      ],
      "css": [
        "content_script/document_start/start.css"
      ]
    },
    {
      "matches": [
        "https://www.google.com/search*",
        "https://www.google.co.jp/search*"
      ],
      "js": [
        "banned_word_repository.js",
        "common.js",
        "option/block.js",
        "option/config.js",
        "content_script/block_anchor.js",
        "content_script/block_target.js",
        "content_script/blockable.js",
        "content_script/dialog.js",
        "content_script/google.js",
        "content_script/google_element.js",
        "content_script/google_inner_card.js"
      ],
      "css": [
        "content_script/google.css"
      ]
    }
  ],
  "options_ui": {
    "page": "option/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage"
  ]
}
